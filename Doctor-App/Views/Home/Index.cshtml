@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to Doctor App</h1>
        <p class="lead">Manage patient visits, medical records, and appointments easily.</p>
        <hr class="my-4">

        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Doctor"))
            {
                <a class="btn btn-primary btn-lg" asp-controller="Doctor" asp-action="Dashboard">Doctor Dashboard</a>
                <a class="btn btn-primary btn-lg" asp-controller="Doctor" asp-action="MyPatients">My Patients</a>
            }
            else if (User.IsInRole("Patient"))
            {
                <a class="btn btn-success btn-lg" asp-controller="Patient" asp-action="ViewMyRecords">View Medical Records</a>
                <a class="btn btn-success btn-lg" asp-controller="Patient" asp-action="AssignDoctor">Assign a Doctor</a>
            }
        }
        else
        {
            <p class="lead">You need to login or register to have access to our services!!!</p>
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">For Doctors</h5>
                    <p class="card-text">Manage appointments, update medical records, and oversee patient history.</p>
                    <a asp-controller="Doctor" asp-action="Dashboard" class="btn btn-primary">Go to Dashboard</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">For Patients</h5>
                    <p class="card-text">View medical records, receive notifications, and track doctor visits.</p>
                    <a asp-controller="Patient" asp-action="ViewMyRecords" class="btn btn-success">View Records</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">Schedule, reschedule, or cancel appointments with ease.</p>
                    <a asp-controller="Appointment" asp-action="Manage" class="btn btn-warning">Manage Appointments</a>
                </div>
            </div>
        </div>
    </div>
</div>
