@model Doctor_App.Core.Models.Billing.BillViewModel
@{
    ViewData["Title"] = "Edit Bill";
}

<h2 class="mb-4 text-primary">Edit Bill</h2>

<form asp-action="EditBill" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="VisitId" />

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="InsuranceDetails" class="form-label"></label>
        <input asp-for="InsuranceDetails" class="form-control" />
        <span asp-validation-for="InsuranceDetails" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentStatus" class="form-label"></label>
        <select asp-for="PaymentStatus" class="form-select">
            <option value="Pending">Pending</option>
            <option value="Paid">Paid</option>
            <option value="Denied">Denied</option>
        </select>
        <span asp-validation-for="PaymentStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="AllBills" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}