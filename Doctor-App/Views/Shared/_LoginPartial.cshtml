@using Doctor_App.Core.Extensions
@using Doctor_App.Core.Services.Doctor
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IBecomeDoctorService doctors
@{
    ViewData["Title"] = "_LoginPartial";
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (!await doctors.ExistsByIdAsync(UserManager.GetUserId(User)!))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Doctor"
                   asp-action="Become">Become Doctor</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

