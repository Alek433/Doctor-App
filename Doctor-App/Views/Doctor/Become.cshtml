@using Doctor_App.Models.Doctor
@model BecomeDoctorModel

@{
    ViewData["Title"] = "Become a Doctor";
}

<h2>Become a Doctor</h2>

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-success text-white d-flex align-items-center">
            <i class="bi bi-person-badge-fill me-2 fs-4"></i>
            <h3 class="mb-0">Apply to Become a Doctor</h3>
        </div>

        <div class="card-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success shadow-sm rounded-3">
                    <i class="bi bi-check-circle-fill me-1"></i>@TempData["Message"]
                </div>
            }

            <form asp-action="Become" method="post">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                    <input asp-for="FirstName" class="form-control" required placeholder="Enter your first name" />
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                    <input asp-for="LastName" class="form-control" required placeholder="Enter your last name" />
                </div>

                <div class="mb-3">
                    <label asp-for="Specialization" class="form-label fw-bold">Specialization</label>
                    <input asp-for="Specialization" class="form-control" required placeholder="E.g., Cardiology, Neurology" />
                </div>

                <div class="mb-3">
                    <label asp-for="ContactInformation" class="form-label fw-bold">Contact Info</label>
                    <input asp-for="ContactInformation" class="form-control" required placeholder="Phone or email address" />
                </div>

                <div class="mb-4">
                    <label asp-for="OfficeLocation" class="form-label fw-bold">Office Location</label>
                    <input asp-for="OfficeLocation" class="form-control" required placeholder="Clinic or hospital name" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-send-fill me-1"></i>Submit Request
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>