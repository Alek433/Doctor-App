@using Doctor_App.Core.Models.Patient
@model List<PatientViewModel>

@{
    ViewData["Title"] = "My Patients";
}

@section Styles {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
        <style>
            .patient-table th, .patient-table td {
                vertical-align: middle;
            }

            .patient-table tbody tr:hover {
                background-color: #f1f9ff;
            }

            .card-header {
                background-color: #007bff;
                color: white;
            }
        </style>
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i>My Patients</h2>
        </div>

        @if (Model != null && Model.Any())
        {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover patient-table mb-0">
                        <thead class="table-primary text-center">
                            <tr>
                                <th><i class="bi bi-person-badge me-1"></i>First Name</th>
                                <th><i class="bi bi-person-badge-fill me-1"></i>Last Name</th>
                                <th><i class="bi bi-calendar-date me-1"></i>Date of Birth</th>
                                <th><i class="bi bi-gender-ambiguous me-1"></i>Gender</th>
                                <th><i class="bi bi-telephone-fill me-1"></i>Contact</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var patient in Model)
                        {
                                    <tr>
                                        <td>@patient.FirstName</td>
                                        <td>@patient.LastName</td>
                                        <td>@patient.DateOfBirth.ToShortDateString()</td>
                                        <td>@patient.Gender</td>
                                        <td>@patient.ContactInformation</td>
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
        }
        else
        {
                <div class="alert alert-warning text-center m-4">
                    <i class="bi bi-info-circle me-1"></i>No patients assigned yet.
                </div>
        }
    </div>
</div>