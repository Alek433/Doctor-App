@using Doctor_App.Core.Models.Patient
@model PatientRecordViewModel

@{
    ViewData["Title"] = "Edit Record";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">Edit Medical Record</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VisitDate" class="form-label">Visit Date</label>
                    <input asp-for="VisitDate" class="form-control" type="date" />
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReasonForVisit" class="form-label">Reason for Visit</label>
                    <input asp-for="ReasonForVisit" class="form-control" placeholder="Enter reason..." />
                    <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Diagnosis" class="form-label">Diagnosis</label>
                    <input asp-for="Diagnosis" class="form-control" placeholder="Enter diagnosis..." />
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Prescriptions" class="form-label">Prescriptions</label>
                    <input asp-for="Prescriptions" class="form-control" placeholder="Enter prescriptions..." />
                    <span asp-validation-for="Prescriptions" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any notes..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">💾 Save Changes</button>
                    <a asp-action="ViewMyRecords" class="btn btn-outline-secondary px-4">↩ Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>