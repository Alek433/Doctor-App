@using Doctor_App.Core.Models.Patient
@model PatientRecordViewModel

@{
    ViewData["Title"] = "View Record";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">View Medical Record</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" readonly />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" readonly/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="VisitDate" class="form-label">Visit Date</label>
                    <input asp-for="VisitDate" class="form-control" type="date" readonly/>
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReasonForVisit" class="form-label">Reason for Visit</label>
                    <input asp-for="ReasonForVisit" class="form-control" readonly />
                    <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Diagnosis" class="form-label">Diagnosis</label>
                    <input asp-for="Diagnosis" class="form-control" readonly />
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Prescriptions" class="form-label">Prescriptions</label>
                    <input asp-for="Prescriptions" class="form-control" readonly />
                    <span asp-validation-for="Prescriptions" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" readonly></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>