@model IEnumerable<Doctor_App.Core.Models.Billing.BillViewModel>

@{
    ViewData["Title"] = "My Bills";
}

<h2>My Bills</h2>

@if (Model == null || !Model.Any())
{
    <p>No bills available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Visit ID</th>
                <th>Doctor</th>
                <th>Amount</th>
                <th>Insurance</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.VisitId</td>
                    <td>@bill.DoctorName</td>
                    <td>@bill.Amount.ToString("C")</td>
                    <td>@bill.InsuranceDetails</td>
                    <td>@bill.PaymentStatus</td>
                    <td>
                        <a asp-action="EditBill" asp-route-id="@bill.Id" class="btn btn-sm btn-primary">Complete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}