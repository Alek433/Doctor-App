@using Doctor_App.Core.Models.Patient

@model BecomePatientViewModel

@{
    ViewData["Title"] = "Become a Patient";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-info text-white d-flex align-items-center">
            <i class="bi bi-person-plus-fill me-2 fs-4"></i>
            <h3 class="mb-0">Patient Registration</h3>
        </div>

        <div class="card-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success shadow-sm rounded-3">
                    <i class="bi bi-check-circle-fill me-1"></i>@TempData["Message"]
                </div>
            }

            <form asp-action="Become" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
                        <input asp-for="FirstName" class="form-control" required placeholder="Enter first name" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
                        <input asp-for="LastName" class="form-control" required placeholder="Enter last name" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateOfBirth" class="form-label fw-semibold">Date of Birth</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label fw-semibold">Gender</label>
                        <input asp-for="Gender" class="form-control" required placeholder="E.g., Male / Female / Other" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ContactInformation" class="form-label fw-semibold">Contact Info</label>
                    <input asp-for="ContactInformation" class="form-control" required placeholder="Phone or email" />
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-semibold">Address</label>
                    <input asp-for="Address" class="form-control" required placeholder="Street, City, ZIP" />
                </div>

                <div class="mb-4">
                    <label asp-for="EmergencyContact" class="form-label fw-semibold">Emergency Contact</label>
                    <input asp-for="EmergencyContact" class="form-control" required placeholder="Name & phone number" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-info text-white px-4">
                        <i class="bi bi-check2-square me-1"></i>Submit Request
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>