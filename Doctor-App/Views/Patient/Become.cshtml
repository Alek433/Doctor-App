@using Doctor_App.Core.Models.Patient

@model BecomePatientViewModel

@{
    ViewData["Title"] = "Become a Patient";
}

<h2>Become a Patient</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="Become" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ContactInformation"></label>
        <input asp-for="ContactInformation" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EmergencyContact"></label>
        <input asp-for="EmergencyContact" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit Request</button>
</form>
