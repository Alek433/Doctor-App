@using Doctor_App.Core.Models
@model List<PatientRecordViewModel>

<h2>My Medical Records</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Visit Date</th>
                <th>Doctor</th>
                <th>Diagnosis</th>
                <th>Prescriptions</th>
                <th>Reason for Visit</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.FirstName</td>
                    <td>@record.LastName</td>
                    <td>@record.VisitDate.ToShortDateString()</td>
                    <td>@record.DoctorId</td>
                    <td>@record.Diagnosis</td>
                    <td>@record.Prescriptions</td>
                    <td>@record.ReasonForVisit</td>
                    <td>@record.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No medical records found.</p>
}
